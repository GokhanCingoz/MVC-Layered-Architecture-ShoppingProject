@model DeliveryModel



@foreach (var item in Model.DeliveryDetails)
{
    <hr class="my-4">

    <div class="row mb-4 d-flex justify-content-between align-items-center">
        <div class="col-md-2 col-lg-2 col-xl-2">
            <img src="@item.Product.ImgLink"
             class="img-fluid rounded-3" alt="">
        </div>
        <div class="col-md-3 col-lg-3 col-xl-3">
            <h6 class="text-black mb-0">@item.Product.Title</h6>
        </div>
        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">

            <h6 class="text-black mb-0">@item.Quantity</h6>
           
        </div>
        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
            <h6 class="mb-0">@string.Format("{0:N2} €", item.TotalPrice)</h6>
        </div>
    </div>
}
<hr class="my-4">
                                    