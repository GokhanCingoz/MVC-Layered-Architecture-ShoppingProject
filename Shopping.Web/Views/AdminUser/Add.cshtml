@model Shopping.Web.Models.UserModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add Users</h1>
    </div>
</div>
<form method="post">
    <div class="container text-center">

        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">User Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">User Id</label>
                    <input type="text" class="form-control" id="name" asp-for="Id" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Name</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Surname</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Surname</label>
                    <input type="text" class="form-control" id="surname" asp-for="Surname">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Password</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Password</label>
                    <input type="text" class="form-control" id="password" asp-for="Password">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Username</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" id="userName" asp-for="Username">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Status</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <label class="form-label">Status</label>
                    <input type="text" class="form-control" id="isAdmin" asp-for="IsAdmin">
                </div>
            </div>
        </div>
        <div>

            <button type="submit" class="btn btn-danger" asp-controller="AdminUser" asp-action="Add">Add</button>
        </div>
    </div>
</form>