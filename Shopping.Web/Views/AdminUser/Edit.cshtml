@model Shopping.Web.Models.EditUserRequest
@{
}

<div class="bg-opacity-10 py-2" style="background-color:aliceblue">
    <div class="container">
        <h1>Edit User</h1>
    </div>
</div>
<form>
    <div class="container text-center">

        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">User Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="id" readonly asp-for="Id" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Name</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Surname</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="surname" asp-for="Surname">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Password</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="password" asp-for="Password">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Username</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="userName" asp-for="Username">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Status</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <select class="form-control" id="exampleFormControlSelect1" asp-for="IsAdmin">
                        <option value="true">Admin</option>
                        <option value="false">User</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="text-end mx-auto">
            <button type="submit" class="btn btn-danger" id="update">Update</button>
            <button type="submit" class="btn btn-danger" id="delete">Remove</button>
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#update").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Name: $("#name").val(),
                Surname: $("#surname").val(),
                Password: $("#password").val(),
                Username: $("#userName").val(),
                IsAdmin: $("#isAdmin").val()
            };

            $.ajax({
                url: '@Url.Action("EditUser","AdminUser")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminUser/List/";
                    } else {
                        window.location.href = "/AdminUser/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
        $("#delete").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Name: $("#name").val(),
                Surname: $("#surname").val(),
                Password: $("#password").val(),
                Username: $("#userName").val(),
                IsAdmin: $("#isAdmin").val(),
                IsDeleted: $("#isDeleted").val()
            };

            $.ajax({
                url: '@Url.Action("Delete","AdminUser")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminUser/List/";
                    } else {
                        window.location.href = "/AdminUser/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
    });

</script>
