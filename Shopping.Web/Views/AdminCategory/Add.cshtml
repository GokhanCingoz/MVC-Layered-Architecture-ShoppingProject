@model Shopping.Web.Models.CategoryModel
@{
}
<div class="bg-opacity-10 py-2" style="background-color:aliceblue">
    <div class="container">
        <h1>Add Category</h1>
    </div>
</div>
<form method="post">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Name</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Icon</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="icon" asp-for="Icon">
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i> Add</button>
        </div>
    </div>
</form>