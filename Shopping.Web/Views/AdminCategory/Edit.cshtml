@model Shopping.Web.Models.CategoryModel
@{
}

<div class="bg-opacity-10 py-2" style="background-color:aliceblue">
    <div class="container">
        <h1>Edit Category</h1>
    </div>
</div>
<form>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Category Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="id" readonly asp-for="Id" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Name</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Icon</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="icon" asp-for="Icon">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-danger" id="update">Update</button>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-danger" id="delete">Remove</button>
            </div>
        </div>
        @*<button type="submit" class="btn btn-danger" id="update">Update</button>*@
    </div>
</form>
<script>
    $(function () {
        $("#update").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Name: $("#name").val(),
                Icon: $("#icon").val()
            };

            $.ajax({
                url: '@Url.Action("EditCategory","AdminCategory")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminCategory/List/";
                    } else {
                        window.location.href = "/AdminCategory/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
        $("#delete").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Name: $("#name").val(),
                Icon: $("#icon").val(),
                IsDeleted: $("#isDeleted").val()
            };

            $.ajax({
                url: '@Url.Action("Delete","AdminCategory")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminCategory/List/";
                    } else {
                        window.location.href = "/AdminCategory/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
    });

</script>
