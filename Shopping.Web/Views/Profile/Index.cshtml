<style>
    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.6;
        color: #4f4f4f;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #bdbdbd;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.25rem;
        box-shadow: inset 0 1px 2px rgba(0,0,0,.075);
        transition: all .2s linear;
    }

        .form-control:focus {
            background-color: #fff;
            border-color: #bdbdbd;
        }

    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .shopping-cart {
        background-color: rgb(248,249,250);
        border: 1px solid rgb(234,232,232);
        border-top-left-radius: 16px;
        border-bottom-left-radius: 16px;
    }

    .quantity-field {
        height: 100%;
        width: 100%;
    }

</style>

@model UserModel
<section class="h-100 " style="background-color: #d2c9ff;">
    <div class="container py-5 pt-1" style="background-color:rgb(248,249,250)">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row ">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">MY PROFILE</h1>
                                    </div>

                                    <form>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-group input-group-outline my-3 focused is-focused">
                                                    <label class="form-label">Name</label>
                                                    <input type="text" id="name" class="form-control" value="@Model.Name">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group input-group-outline my-3 focused is-focused">
                                                    <label class="form-label">Surname</label>
                                                    <input type="text" id="surname" class="form-control" value="@Model.Surname">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div id="emailDiv" class="input-group input-group-outline my-3 focused is-focused">
                                                    <label class="form-label">User Name</label>
                                                    <input id="email" type="email" class="form-control" value="@Model.Username">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group input-group-outline my-3 focused is-focused">
                                                    <label class="form-label">Password</label>
                                                    <input id="phone" type="text" class="form-control" value="@Model.Password">
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

