<style>
    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.6;
        color: #4f4f4f;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #bdbdbd;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.25rem;
        box-shadow: inset 0 1px 2px rgba(0,0,0,.075);
        transition: all .2s linear;
    }

        .form-control:focus {
            background-color: #fff;
            border-color: #bdbdbd;
        }

    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .shopping-cart {
        background-color: rgb(248,249,250);
        border: 1px solid rgb(234,232,232);
        border-top-left-radius: 16px;
        border-bottom-left-radius: 16px;
    }

    .quantity-field {
        height: 100%;
        width: 100%;
    }

</style>

@model UserModel
<section class="h-100 " style="background-color: #d2c9ff;">
    <div class="container py-5 pt-1" style="background-color:rgb(248,249,250)">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-12 shopping-cart my-auto">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">My Profile</h1>
                                    </div>

                                    <div class="card">
                                        <div class="table-responsive">
                                            <table class="table align-items-center mb-0">
                                                <thead>
                                                    <tr>
                                                        <th class="text-uppercase text-black text-m font-weight-bolder ">Name</th>
                                                        <th class="text-uppercase text-black text-m font-weight-bolder ps-2">Surname</th>
                                                        <th class="text-center text-uppercase text-black text-m font-weight-bolder ">Password</th>
                                                        <th class="text-center text-uppercase text-black text-m font-weight-bolder ">User Name</th>
                                                        <th class="text-secondary opacity-7"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    <tr>
                                                        <td>
                                                            <div class="d-flex px-2 py-1">
                                                                <div class="d-flex flex-column justify-content-center">
                                                                    <p class="mb-0 text-m font-weight-bold">@Model.Name</p>

                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <p class="text-m  font-weight-bold mb-0">@Model.Surname</p>
                                                        </td>
                                                        <td class="align-middle text-center text-sm">
                                                            <p class="text-m  font-weight-bold mb-0">@Model.Password</p>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <p class="text-m  font-weight-bold mb-0">@Model.Username</p>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <a  href="/Profile/Edit?userId=@Model.Id" class="btn btn-default mb-0 "><i class="fas fa-pencil-alt"></i> Edit profile</a>

                                                        </td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <hr class="my-6">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


