@model Shopping.Web.Models.ProductModel
@{
}
<div class="bg-opacity-10 py-2" style="background-color:aliceblue">
    <div class="container">
        <h1>Edit Product</h1>
    </div>
</div>
<form>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Product Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="id" readonly asp-for="Id" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Title</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="title" asp-for="Title">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Description</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="description" asp-for="Description">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Brand</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="brand" asp-for="Brand">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Price</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="price" asp-for="Price">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Rating</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="rating" asp-for="Rating">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Stock</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="stock" asp-for="Stock">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Image Link</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="imgLink" asp-for="ImgLink">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient-info">Category Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="categoryId" asp-for="CategoryId">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="button" class="btn btn-danger" id="update">Update</button>
            </div>
            <div class="col-md-6">
                <button type="button" class="btn btn-danger" id="delete">Remove</button>
            </div>
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#update").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Title: $("#title").val(),
                Description: $("#description").val(),
                Brand: $("#brand").val(),
                Price: $("#price").val(),
                Rating: $("#rating").val(),
                Stock: $("#stock").val(),
                ImgLink: $("#imgLink").val(),
                CategoryId: $("#categoryId").val()
            };

            $.ajax({
                url: '@Url.Action("EditProduct","AdminProduct")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminProduct/List/";
                    } else {
                        window.location.href = "/AdminProduct/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
        $("#delete").click(function () {

            var data =
            {
                Id: $("#id").val(),
                IsDeleted: $("#isDeleted").val()
            };

            $.ajax({
                url: '@Url.Action("Delete","AdminProduct")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    debugger
                    if (result) {
                        window.location.href = "/AdminProduct/List/";
                    } else {
                        window.location.href = "/AdminProduct/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
    });

</script>
