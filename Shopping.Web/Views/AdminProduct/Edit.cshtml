@model Shopping.Web.Models.ProductModel
@{
}
<style>
    .container {
        margin-left: inherit;
    }

    h1 {
        background: linear-gradient(43deg,#86C5D8 0%,#9C27B0 25%);
        -webkit-background-clip: text;
        color: transparent;
    }

</style>
<div class="bg-opacity-10 py-2 mx-6" style="background-color:aliceblue">
        <h1>Edit Product</h1>
</div>
<form class="mx-start needs-validation " novalidate>
    <div class="container mx-start">
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient" style=" background-color:#334A78">Product Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="id" readonly asp-for="Id"  />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Title</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="title" asp-for="Title" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Description</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="description" asp-for="Description" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Brand</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="brand" asp-for="Brand" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Price</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="price" asp-for="Price" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Rating</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="rating" asp-for="Rating" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Stock</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="stock" asp-for="Stock" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Image Link</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="imgLink" asp-for="ImgLink" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="input-group input-group-outline my-4 justify-content-end">
                    <span class="badge bg-gradient " style=" background-color:#334A78">Category Id</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" id="categoryId" asp-for="CategoryId" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
            </div>
        </div>
       
        <div class="col-md-8 d-flex justify-content-end my-2 px-2 ">
            <button type="submit" class="btn mx-2" id="update" style="background-color:#AA7FC6;color:white">Update</button>
            <button type="submit" class="btn " id="delete" style="background-color:#86C5D8;color:white">Remove</button>
        </div>
    </div>
</form>
<script>
    $(function () {
        $("#update").click(function () {

            var data =
            {
                Id: $("#id").val(),
                Title: $("#title").val(),
                Description: $("#description").val(),
                Brand: $("#brand").val(),
                Price: $("#price").val(),
                Rating: $("#rating").val(),
                Stock: $("#stock").val(),
                ImgLink: $("#imgLink").val(),
                CategoryId: $("#categoryId").val()
            };

            $.ajax({
                url: '@Url.Action("EditProduct","AdminProduct")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    if (result) {
                        window.location.href = "/AdminProduct/List/";
                    } else {
                        window.location.href = "/AdminProduct/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
        $("#delete").click(function () {

            var data =
            {
                Id: $("#id").val(),
                IsDeleted: $("#isDeleted").val()
            };

            $.ajax({
                url: '@Url.Action("Delete","AdminProduct")',
                type: 'POST',
                dataType: 'json',
                data: data,
                success: function (result) {
                    debugger
                    if (result) {
                        window.location.href = "/AdminProduct/List/";
                    } else {
                        window.location.href = "/AdminProduct/Edit?id=" + data.Id;
                    }
                },
                error: function (xhr, status, error) {
                    // Hata durumunda ne yapılacağını belirleyin
                    console.log("Hata: " + error);

                }
            });
        });
    });

    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

</script>
